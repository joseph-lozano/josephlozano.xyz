<div class="mx-6">
  <%= if @article.draft do %>
    <h5 class="">DRAFT</h5>
  <% end %>
  <h2 class="text-xl font-bold"><%= @article.title %></h2>
  <%= if @article.date do %>
    Published: <%=  Calendar.strftime(@article.date, "%A, %B %d %Y") %>
  <% end %>
  <hr/>
  <div class="prose mt-6">
    <%= raw(@article.body) %>
  </div>
</div>
